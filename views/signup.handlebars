<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Chirper</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <div class="header">
    <h1 id="logo">Chirper</h3>
    <div class="headerBtns">
      <button onclick="window.location.href='/login';" id="loginButton">Login</button>
      <button onclick="window.location.href='/signup';" id="signupButton">Sign up</button>
    </div>
  </div>
  <div class="main">
    <form id="signupForm" name="signupForm" action="/signup" method="POST" class="mainForm">
      <div class="labelInputGroup">
        <label htmlFor="username">Username: </label>
        <input id="user" type="text" name="username" placeholder="username" />
      </div>
      <div class="labelInputGroup">
        <label htmlFor="pass">Password: </label>
        <input id="pass" type="password" name="pass" placeholder="password" />
      </div>
      <div class="labelInputGroup">
        <label htmlFor="pass2">Retype Password: </label>
        <input id="pass2" type="password" name="pass2" placeholder="retype password" />
      </div>
      <input type="hidden" name="_csrf" value={props.csrf} />
      <input class="formSubmit" type="submit" value="Sign Up" />
    </form>
  </div>
  <div class="message">
    <h3 id="errorMessage"></h3>
  </div>
  <div class="footer">
      Footer
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>