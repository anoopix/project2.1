<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Chirper</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <div class="header">
    <h1 id="logo">Chirper</h3>
    <div class="headerBtns">
      <button onclick="window.location.href='/logout';" id="logoutButton">Logout</button>
    </div>
  </div>
  <div class="main">
    <div class="userInput">
      <form id="makerForm" name="chirpForm" action="/maker" method="POST" class="makerForm">
          <textarea id="maker" type="text" name="chirp" rows="5" cols="80" placeholder="Make a chirp"></textarea>
          <input type="hidden" name="_csrf" value={props.csrf} />
          <br>
          <input id="sendBtn" type="submit" value="Send" />
      </form>
      <form id="searchForm" name="searchForm" action="/maker" method="GET" class="searchForm">
          <input id="search" type="text" name="search" placeholder="Search keywords" />
          <input type="hidden" name="_csrf" value={props.csrf} />
          <input id="searchBtn" type="submit" value="Search" />
      </form>
    </div>
    <div class="chirperFeed">
      {{#if chirps}}
        {{#each chirps}}
          <div class="chirp">
            <div class="chirpUserInfo">
              <img src="/assets/img/default_avatar.png" alt="default avatar" id="avatar" />
              <p id="authorText">{{this.author}}</p>
            </div>
            <div class="chirpMain">
              <h3 class="chirpText">{{this.chirp}}</h3>
              <h3 class="dateText">Chirped at {{this.date}}</h3>
            </div>
            <div class="chirpInteract">
              <button id="likeBtn">Like</button>
              <button id="rechirpBtn">Rechirp</button>
              <button id="replyBtn">Reply</button>
              <button id="commentsBtn">Comments</button>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h3 class="noChirps">No Chirps have been posted yet!</h3>
      {{/if}}
    </div>
  </div>
  <div class="message">
      <h3 id="errorMessage"></h3>
  </div>
  <div class="footer">
      Footer
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>